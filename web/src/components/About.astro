---
import { getAboutInfo } from '../utils/getStrapiInfo.ts'
import { richTextToHtml } from '../utils/richTextToHtml.ts'

const dataAbout = await getAboutInfo()
const AboutDescripcion = richTextToHtml(dataAbout.data.Descripcion)

---
<section class=" max-w-7xl mx-auto my-24 p-2 ">
  <div class="flex bg-secondary rounded-4xl overflow-hidden">
    <div class="p-6">
      <h2 class="text-4xl font-bold text-tertiary text-center my-8">Acerca de <b class="text-primary">Nosotros</b></h2>
      <p class="text-lg text-pretty text-white/85">{AboutDescripcion}</p>
    </div>
    <img src="sala.webp" class="object-cover w-2/3 rounded-4xl hidden md:inline-block" alt="">
  </div>
</section>